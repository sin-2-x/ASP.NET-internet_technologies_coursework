<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Титул, хех)</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
  <link rel="stylesheet" href="~/css/import.css" asp-append-version="true" />@*
  <link rel="stylesheet" href="~/Web_MVC.styles.css" asp-append-version="true" />*@
</head>
<body class="h-100 " style="min-height: 100%;
    display: grid;
    grid-template-rows: 1fr auto;">
  <header class="position-fixed w-100" style="
    z-index:1000">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
      <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="CalendarGrid" asp-action="Index">CalendarGridController </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
          <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
              <a class="nav-link text-dark" asp-area="" asp-controller="CalendarGrid" asp-action="Index">Календарь</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-dark" asp-area="" asp-controller="Statistics" asp-action="Index">Статистика</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="container h-100 d-flex justify-content-center align-items-center">
    <main role="main" class="pb-3 w-100" style="padding-top: 79px;">
            @RenderBody()
    </main>
  </div>

  <footer class="border-top footer text-muted">
    <div class="container">
      &copy; 2023 - Web_MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
  </footer>
  
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  
  <script src="~/js/simpleBar.js" asp-append-version="true"></script>
  <script src="~/js/site.js"  type="module" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
